<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Selected true (same as Pressed true) -->
    <item android:state_focused="true" android:state_pressed="false"><shape android:shape="rectangle">
            <solid android:color="@color/dark_grey" />
                        <padding android:right="5dp" android:left="5dp" android:top="5dp" android:bottom="5dp"/>
            <stroke android:width="5dp" android:color="@color/dark_grey"/>
        </shape></item>

    <!-- Selected false (same as Pressed false) -->
    <item android:state_focused="false" android:state_pressed="false"><shape android:shape="rectangle">
            <solid android:color="@color/transparent" />
        </shape></item>

    <!-- Pressed true (same as Selected true) -->
    <item android:state_pressed="true"><shape android:shape="rectangle">
            <solid android:color="@color/dark_grey" />
            <padding android:right="5dp" android:left="5dp" android:top="5dp" android:bottom="5dp"/>
            <stroke android:width="5dp" android:color="@color/dark_grey"/>
        </shape></item>

    <!-- Pressed false (same as Selected false) -->
    <item android:state_pressed="false"><shape android:shape="rectangle">
            <solid android:color="@color/transparent" />
        </shape></item>

</selector>